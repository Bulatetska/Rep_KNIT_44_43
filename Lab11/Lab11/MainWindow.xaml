<Window x:Class="Lab11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Привіт, світ!" Height="450" Width="703">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
        <TextBlock Text="Введіть своє ім'я:" FontSize="16" Margin="0,0,0,10"/>
        <TextBox x:Name="NameTextBox" Width="200" Margin="0,0,0,10"/>
        <Button Content="Підтвердити" Width="100" Click="ConfirmButton_Click"/>
        <TextBlock x:Name="GreetingTextBlock" FontSize="16" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
