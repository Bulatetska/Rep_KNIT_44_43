<Window x:Class="Lab11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab11"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <TextBlock Text="Введіть своє ім'я:" FontSize="16" Margin="0,0,0,10"/>
            <TextBox Name="NameInput" Width="200" Height="30" FontSize="14" Margin="0,0,0,10"/>
            <Button Content="Підтвердити" Width="100" Height="30" Click="OnConfirmButtonClick" Margin="0,0,0,10"/>
            <TextBlock Name="GreetingMessage" FontSize="16" Foreground="Green" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
