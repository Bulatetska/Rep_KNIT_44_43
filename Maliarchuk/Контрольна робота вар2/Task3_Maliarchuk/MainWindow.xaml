        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3_Maliarchuk"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Grid>
        <TextBox Name="InputTextBox" Width="300" Height="30" VerticalAlignment="Top" Margin="50,24,50,0"/>
        <Button Name="ProcessButton" Content="Обробити" Width="100" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" Click="ProcessButton_Click"/>
        <TextBlock Name="ResultTextBlock" Width="300" Height="30" VerticalAlignment="Top" Margin="50,130,50,0" TextWrapping="Wrap"/>
    </Grid>
</Window>
