<Window x:Class="lab11_maliarchuk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Book Manager" Height="350" Width="600">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <ListBox ItemsSource="{Binding Books}"
         SelectedItem="{Binding SelectedBook}"
         DisplayMemberPath="Title"
         Grid.Column="0" />


        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Назва:" />
            <TextBox Text="{Binding NewTitle, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Автор:" />
            <TextBox Text="{Binding NewAuthor, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Рік видання:" />
            <TextBox Text="{Binding NewYear, UpdateSourceTrigger=PropertyChanged}" />

            <Button Content="Додати книгу" Command="{Binding AddBookCommand}" Margin="0,10,0,0" />
            <Button Content="Видалити книгу" Command="{Binding RemoveBookCommand}" Margin="0,10,0,0"/>
        </StackPanel>

    </Grid>
</Window>
