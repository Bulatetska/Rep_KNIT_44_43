@model List<string>

<h2>Список продуктів</h2>
<ul>
    @for (int i = 0; i < Model.Count; i++)
    {
        <li>
            @Model[i]
            <a href="@Url.Action("Edit", "Product", new { id = i })">Редагувати</a>
            <a href="@Url.Action("Delete", "Product", new { id = i })">Видалити</a>
        </li>
    }
</ul>
