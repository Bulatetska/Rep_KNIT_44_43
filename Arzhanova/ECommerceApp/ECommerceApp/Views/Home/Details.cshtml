<p>Email: @ViewBag.Email</p>
using Microsoft.AspNetCore.Authentication.Cookies;

var builder = WebApplication.CreateBuilder(args);

// Додаємо Cookie Authentication
builder.Services.AddAuthentication(CookieAuthenticationDefaults.AuthenticationScheme)
    .AddCookie(options =>
    {
        options.LoginPath = "/Account/Login"; // Шлях до сторінки входу
        options.AccessDeniedPath = "/Account/AccessDenied"; // Сторінка відмови у доступі
    });

builder.Services.AddAuthorization();

var app = builder.Build();

// Додаємо middleware аутентифікації та авторизації
app.UseAuthentication();
app.UseAuthorization();

app.MapDefaultControllerRoute();

app.Run();
