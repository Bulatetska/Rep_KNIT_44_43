@{
    ViewData["Title"] = "Редагувати продукт";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="productName">Назва продукту:</label>
        <input type="text" id="productName" name="productName" class="form-control" value="@ViewBag.Product" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Зберегти</button>
    </div>
</form>
